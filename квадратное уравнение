	private: System::Void button1_Click(System::Object^  sender, System::EventArgs^  e) {
		double a, b, c, d, x1, x2;
		a = System::Convert::ToInt32(textBox1->Text);
		b = System::Convert::ToInt32(textBox2->Text);
		c = System::Convert::ToInt32(textBox3->Text);
		
		d = b*b - 4 * a*c;
		if (d >= 0 && a != 0) {
			x1 = (-b + sqrt(d)) / (2 * a);
			x2 = (-b - sqrt(d)) / (2 * a);

			label4->Text = "Корень 1= " + System::Convert::ToString(x1);
			label5->Text = "Корень 2= " + System::Convert::ToString(x2);
		}
		else if (d == 0) {
			x1 = -b / (2 * a);
			label4->Text = "Корень 1= " + System::Convert::ToString(x1);
		}

		else
			label4->Text = "Решений нет";
		}
	
};
