#include <iostream>

using namespace std;

int main(){
	int mass[30][30];
	int n;
	setlocale(0,"russian");
	cout<<"Введите размер массива: ";
	cin>>n;
	for (int i=0;i<n;i++){
		for (int j=0;j<n;j++){
			mass[i][j]=0;
		}
	}

	//спрашиваем какой треугольник
	cout<<"Введите номер нужного треугольника: \n 1-правый \n 2-левый \n 3-нижний \n 4-верхний \n";
	int nomer;
	cin>>nomer;
	cout<<endl;

//вывод треугольника
	//правый треугольник
	if(nomer==1){
for (int i=0;i<n;i++){
		for (int j=0;j<n;j++){
			if(i<j&&i>n-1-j||i==j&&(n/2)-1<j||i==n-1-j&&i<n/2){
				mass[i][j]=1;
			}
		}
}
	}
	//левый треугольник
	if(nomer==2){
for (int i=0;i<n;i++){
		for (int j=0;j<n;j++){
			//if(i==j&&j<n/2||i==n-1-j&&i>(n/2)-1||j==0){
			if(i>j&&i<n-1-j||i==j&&j<n/2||i==n-1-j&&i>(n/2)-1){
				mass[i][j]=1;
			}
		}
}
	}
	//верхний треугольник
		if(nomer==4){
for (int i=0;i<n;i++){
		for (int j=0;j<n;j++){
			//if(i==n-1-j&&i<n/2||i==0||i==j&&j<n/2){
			if(i<j&&i<n-1-j||i==j&&j<n/2||i==n-1-j&&i<n/2){
				mass[i][j]=1;
			}
		}
		}
}
		//Нижний треугольник
		if(nomer==3){
for (int i=0;i<n;i++){
		for (int j=0;j<n;j++){
			if(i>j&&i>n-1-j||i==n-1-j&&i>(n/2)-1||i==j&&(n/2)-1<j){
				mass[i][j]=1;
			}
		}
		}
}

	//вывод
	for (int i=0;i<n;i++){
		for (int j=0;j<n;j++){
			if(mass[i][j]==0){
				cout<<"."<<" ";
			}
			else
				cout<<"*"<<" ";
		}
		cout<<endl;
	}
	return 0;
}
